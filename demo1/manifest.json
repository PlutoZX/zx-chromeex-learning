
{
  "manifest_version": 2,
  "name": "zxdemo1",
  "version": "1.0.0.0",
  "description": "小旋子的chrome扩展demo1",
  "icons": {
      "16": "images/WechatIMG2.jpg",
      "19": "images/WechatIMG2.jpg",
      "38": "images/WechatIMG2.jpg",
      "48": "images/WechatIMG2.jpg"
  },
  "browser_action": {
      "default_icon": {
        "48": "images/WechatIMG2.jpg"
      },
      "default_title": "小旋子的chrome扩展demo1",
      "default_popup": "main.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.jd.com/"],
      "js": ["js/jd1.js"]
    },
    {
      "matches": ["*://www.baidu.com/"],
      "js": ["js/baidu1.js"]
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "options_page": "options.html",
  "permissions": [
    "*://*.wikipedia.org/*",
    "*://*.jd.com/*",
    "*://*.xiaomi.com/*",
    "*://*.weather.com.cn/*",
    "storage",
    "contextMenus",
    "notifications",
    "bookmarks",
    "tabs",
    "downloads",
    "webRequest",
    "webRequestBlocking",
    "proxy",
    "system.cpu",
    "system.memory",
    "system.storage"
  ],
  "omnibox": { "keyword" : "zx" }
}
